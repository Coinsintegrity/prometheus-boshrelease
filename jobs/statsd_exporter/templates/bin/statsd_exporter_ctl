#!/usr/bin/env bash

set -eu

RUN_DIR=/var/vcap/sys/run/statsd_exporter
LOG_DIR=/var/vcap/sys/log/statsd_exporter
TMP_DIR=/var/vcap/sys/tmp/statsd_exporter
STORE_DIR=/var/vcap/store/statsd_exporter
mkdir -p ${RUN_DIR} ${LOG_DIR} ${TMP_DIR} ${STORE_DIR}

PIDFILE=${RUN_DIR}/statsd_exporter.pid

source /var/vcap/packages/statsd_exporter/common/utils.sh
exec 1>> ${LOG_DIR}/$(basename "$0").stdout.log
exec 2>> ${LOG_DIR}/$(basename "$0").stderr.log

export PATH=/var/vcap/packages/statsd_exporter/bin:${PATH}

case $1 in
  start)
    pid_guard ${PIDFILE} "statsd_exporter"
    echo $$ > ${PIDFILE}

    exec statsd_exporter \
      --statsd.listen-tcp=":<%= p('statsd_exporter.statsd.tcp_port') %>" \
      --statsd.listen-udp=":<%= p('statsd_exporter.statsd.udp_port') %>" \
      --statsd.mapping-config="/var/vcap/jobs/statsd_exporter/config/statsd_mapping.conf" \
      <% if_p('statsd_exporter.statsd.read_buffer') do |read_buffer| %> \
      --statsd.read-buffer="<%= read_buffer %>" \
      <% end %> \
      <% if_p('statsd_exporter.statsd.cache_size') do |cache_size| %> \
      --statsd.cache-size="<%= cache_size %>" \
      <% end %> \
      <% if_p('statsd_exporter.statsd.cache_type') do |cache_type| %> \
      --statsd.cache-type="<%= cache_type %>" \
      <% end %> \
      <% if_p('statsd_exporter.statsd.event_queue_size') do |event_queue_size| %> \
      --statsd.event-queue-size="<%= event_queue_size %>" \
      <% end %> \
      <% if_p('statsd_exporter.statsd.event_flush_threshold') do |event_flush_threshold| %> \
      --statsd.event-flush-threshold="<%= event_flush_threshold %>" \
      <% end %> \
      <% if_p('statsd_exporter.statsd.event_flush_interval') do |event_flush_interval| %> \
      --statsd.event-flush-interval="<%= event_flush_interval %>" \
      <% end %> \
      <% if_p('statsd_exporter.statsd.parse_dogstatsd_tags') do %> \
      --statsd.parse-dogstatsd-tags \
      <% end %> \
      <% if_p('statsd_exporter.statsd.parse_influxdb_tags') do %> \
      --statsd.parse-influxdb-tags \
      <% end %> \
      <% if_p('statsd_exporter.statsd.parse_librato_tags') do %> \
      --statsd.parse-librato-tags \
      <% end %> \
      <% if_p('statsd_exporter.statsd.parse_signalfx_tags') do %> \
      --statsd.parse-signalfx-tags \
      <% end %> \
      <% if_p('statsd_exporter.log_format') do |log_format| %> \
      --log.format="<%= log_format %>" \
      <% end %> \
      <% if_p('statsd_exporter.log_level') do |log_level| %> \
      --log.level="<%= log_level %>" \
      <% end %> \
      --web.listen-address=":<%= p('statsd_exporter.web.port') %>" \
      <% if_p('statsd_exporter.web.telemetry_path') do |telemetry_path| %> \
      --web.telemetry-path="<%= telemetry_path %>" \
      <% end %> \
      >>  ${LOG_DIR}/statsd_exporter.stdout.log \
      2>> ${LOG_DIR}/statsd_exporter.stderr.log
    ;;

  stop)
    kill_and_wait ${PIDFILE}
    ;;

  *)
    echo "Usage: $0 {start|stop}"
    exit 1
    ;;

esac
exit 0
